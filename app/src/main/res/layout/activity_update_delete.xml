<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout tools:context=".update_delete" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="30sp" android:id="@+id/key"/>

    <ImageView android:layout_height="match_parent" android:layout_width="match_parent" android:scaleType="centerCrop" android:src="@drawable/background"/>


    -<LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" tools:layout_editor_absoluteY="96dp" tools:layout_editor_absoluteX="20dp" android:orientation="vertical" android:layout_margin="20dp" android:layout_gravity="center">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:fontFamily="@font/alegreya_sc"
        android:lineSpacingExtra="24sp"
        android:text="Edit Report"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="45sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="540dp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:background="@drawable/edit"
        android:drawableLeft="@drawable/ic_person"
        android:drawablePadding="10dp"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:textColorHint="#34aeeb" />

    <EditText
        android:id="@+id/symptom"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit"
        android:drawableLeft="@drawable/ic_person"
        android:drawablePadding="10dp"
        android:hint="Symptom"
        android:inputType="text"
        android:padding="20dp"
        android:textColorHint="#2CA7E0" />

    <EditText
        android:id="@+id/diag"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit"
        android:drawableLeft="@drawable/ic_person"
        android:drawablePadding="10dp"
        android:hint="Diagnosis"
        android:inputType="text"
        android:padding="20dp"
        android:textColorHint="#2CA7E0" />

    <EditText
        android:id="@+id/room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit"
        android:drawableLeft="@drawable/ic_person"
        android:drawablePadding="10dp"
        android:hint="Room Number"
        android:inputType="number"
        android:padding="20dp"
        android:textColorHint="#2CA7E0" />

    <EditText
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit"
        android:drawableLeft="@drawable/ic_person"
        android:drawablePadding="10dp"
        android:hint="Date Time"
        android:inputType="datetime"
        android:padding="20dp"
        android:textColorHint="#2CA7E0" />

    <!--    <EditText android:layout_height="wrap_content" android:layout_width="190dp" android:id="@+id/dis1" android:layout_gravity="center" android:textColorHint="#2CA7E0" android:padding="20dp" android:inputType="text" android:hint="Disease 1 #%" android:drawablePadding="10dp" android:drawableLeft="@drawable/ic_person" android:background="@drawable/edit"/>-->

<!--    <EditText android:layout_height="wrap_content" android:layout_width="184dp" android:id="@+id/dis2" android:layout_gravity="center" android:textColorHint="#2CA7E0" android:padding="20dp" android:inputType="text" android:hint="Disease 2 #%" android:drawablePadding="10dp" android:drawableLeft="@drawable/ic_person" android:background="@drawable/edit"/>-->

    <Button
        android:id="@+id/updateButton"
        android:layout_width="184dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:background="@drawable/button"
        android:onClick="btnUpdate_Click"
        android:text="@string/update"
        android:textColor="#fff" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="7dp"
        android:background="@drawable/button"
        android:onClick="btnDelete_Click"
        android:text="@string/delete"
        android:textColor="#fff" />

</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>